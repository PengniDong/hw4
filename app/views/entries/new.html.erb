<h1>New Entry</h1>

<form action="/entries" method="post" enctype="multipart/form-data">
  <input type="hidden" name="entry[place_id]" value="<%= params["place_id"] %>">
  
  <div class="mb-3">
    <label for="title_input" class="form-label">Title</label>
    <input type="text" name="entry[title]" id="title_input" class="form-control">
  </div>
  
  <div class="mb-3">
    <label for="description_input" class="form-label">Description</label>
    <textarea name="entry[description]" id="description_input" class="form-control"></textarea>
  </div>
  
  <div class="mb-3">
    <label for="occurred_on_input" class="form-label">Date</label>
    <input type="date" name="entry[occurred_on]" id="occurred_on_input" class="form-control">
  </div>
  
  <div class="mb-3">
    <label for="image_input" class="form-label">Image</label>
    <input type="file" name="entry[image]" id="image_input" class="form-control" accept="image/*">
  </div>
  
  <button class="btn btn-primary">Save</button>
</form>