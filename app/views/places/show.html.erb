<h1><%= @place["name"] %></h1>

<p class="mb-4">
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary" style="border: 2px solid black;">New Post</a>
</p>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card h-100">
        <% if entry.image.attached? %>
          <%= image_tag(entry.image, class: "card-img-top") %>
        <% else %>
          <div class="card-img-top text-center bg-light py-5">
            double-click to select image
          </div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= entry.description %></p>
          <p class="text-muted"><%= entry.occurred_on %></p>
          <p class="card-text"><%= entry.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p class="mt-3">
  <a href="/places" class="btn btn-outline-secondary">Back to All Places</a>
</p>