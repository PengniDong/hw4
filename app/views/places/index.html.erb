<h1>Places</h1>

<div class="row">
  <% for place in @places %>
    <div class="col-md-4 mb-3">
      <div class="card p-2">
        <a href="/places/<%= place["id"] %>"><%= place["name"] %></a>
      </div>
    </div>
  <% end %>
</div>

<p class="mt-3">
  <a href="/places/new" class="btn btn-primary" style="border: 2px solid black;">New place</a>
</p>

<h1>Places</h1>
<%= link_to "New Place", new_place_path, class: "btn btn-primary" %>

<ul>
  <% @places.each do |place| %>
    <li>
      <%= link_to place.name, place_path(place) %> |
      <%= link_to "Log", place_entries_path(place) %>
    </li>
  <% end %>
</ul>