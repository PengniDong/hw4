<h1>Places</h1>

<div class="row">
  <% for place in @places %>
    <div class="col-md-4 mb-3">
      <div class="card p-2">
        <a href="/places/<%= place["id"] %>"><%= place["name"] %></a>
      </div>
    </div>
  <% end %>
</div>

<p class="mt-3">
  <a href="/places/new" class="btn btn-primary">New place</a>
</p>